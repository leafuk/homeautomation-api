FROM arm32v7/node:6-slim as build

RUN apt-get update && apt-get -qy install build-essential libudev-dev python
# WORKDIR /root/  

RUN mkdir /app
WORKDIR /app

ENV PATH /app/node_modules/.bin:$PATH

ADD ./package.json /app
# ADD ./local-serve.js /app
# ADD ./app.js /app

ADD ./bin/arm/HarmonyHubControl /app/HarmonyHubControl
RUN npm install

FROM arm32v7/node:6-slim
RUN mkdir /app
WORKDIR /app

COPY --from=build /app /app
ADD ./src /app

RUN chmod +x ./HarmonyHubControl && chmod +x ./modules/hs100.sh

EXPOSE 3000

CMD [ "npm", "start" ]